<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeServer</title>

   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            height: 100vh;
            background-color: #1e1e1e;
            color: white;
            padding: 20px;
        }

        .sidebar h2 {
            margin-bottom: 20px;
        }

        .sidebar a {
            display: block;
            color: #ccc;
            padding: 10px 0;
            text-decoration: none;
        }

        .sidebar a:hover {
            color: #fff;
        }

        .content {
            margin-left: 300px;
            padding: 20px;
        }
    </style>
</head>

<body>

    <div class="sidebar">
        <h2>HomeServer</h2>

        <a asp-page="/Dashboard">Dashboard</a>
        <a asp-page="/Media">Media</a>
        <a asp-page="/Minecraft">Minecraft</a>
        <a asp-page="/Bluetooth">Bluetooth</a>
        <a asp-page="/Settings">Settings</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
